{
    "app-id" : "me.sanchezrodriguez.passes",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "44",
    "sdk" : "org.gnome.Sdk",
    "command" : "passes",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "cleanup-commands" : [
        "find /app -type d -name blueprintcompiler | xargs rm -fr"
    ],
    "modules" : [
        "modules/blueprint.json",
        "modules/zint.json",
        {
            "name" : "passes",
            "builddir" : true,
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "tag" : "v0.8",
                    "commit" : "a4da423bb23f6720f85121f92f7a62d61f1ca400",
                    "url" : "https://github.com/pablo-s/passes.git"
                }
            ]
        }
    ]
}
